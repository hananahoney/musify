<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SignIn2">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="226dp"
        android:layout_height="225dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="448dp"
        app:srcCompat="@drawable/logo1" />

    <Button
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/editTextTextEmailAddress"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-450dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="-230dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Continue with Facebook"


        android:paddingLeft="20dp"
        android:textColor="#B3FFC107"
        android:textColorHint="#5C18F4" />


    <Button
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="295dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Continue with Google"


        android:paddingLeft="20dp"

        android:textColorHint="#EA1818" />

    <Button
        android:id="@+id/etPasswordLayout"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/editTextTextEmailAddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-260dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="200dp"
        android:backgroundTint="@color/white"
        android:ems="10"

        android:hint="Create Account"

        android:paddingLeft="20dp"
        android:textColor="#B3FFC107"
        android:textColorHint="#B3FFC107"

        app:hintEnabled="true"
        app:passwordToggleEnabled="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="230dp"
        android:layout_height="104dp"
        android:layout_above="@+id/editTextTextPersonName2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="0dp"

        android:layout_marginEnd="0dp"
        android:layout_marginBottom="650dp"
        android:layout_toEndOf="@+id/imageView2"
        android:backgroundTint="@color/black"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />



</RelativeLayout>