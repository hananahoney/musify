<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="194dp"
        android:layout_height="191dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="482dp"
        app:srcCompat="@drawable/logo1" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/editTextTextEmailAddress"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-500dp"
        android:textColor="#B3FFC107"
        android:paddingLeft="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="-220dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColorHint="#B3FFC107" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="367dp"
        android:background="@color/white"
        android:ems="10"
        android:paddingLeft="20dp"
        android:hint="Email"
        android:textColor="#B3FFC107"
        android:inputType="textEmailAddress"
        android:textColorHint="#B3FFC107" />


    <EditText
        android:id="@+id/etPasswordLayout"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/editTextTextEmailAddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-330dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="46dp"
        android:background="@color/white"
        android:hint="Password"
        android:textColorHint="#B3FFC107"

        android:ems="10"
        android:textColor="#B3FFC107"
        android:paddingLeft="20dp"
        android:inputType="textPassword"
        app:hintEnabled="true"

        app:passwordToggleEnabled="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="115dp"
        android:layout_height="44dp"
        android:layout_below="@+id/etPasswordLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="243dp"
        android:layout_marginBottom="-52dp"
        android:text="Gender"
        android:textColor="#B3FFC107"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/rodiogroup1"
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="153dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="93dp"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:src="@drawable/male" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="93dp"
            android:layout_height="77dp"
            android:layout_weight="1"

            />

        <ImageView
            android:layout_width="82dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:src="@drawable/female" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="82dp"
            android:layout_height="68dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/other" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_weight="1" />


    </RadioGroup>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="584dp"
        android:layout_marginEnd="22dp"
        android:text="I would like to receive your newsletter and other promotional information."
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button2"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/corners"
        android:text="Sign UP"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="230dp"
        android:layout_height="104dp"
        android:layout_above="@+id/editTextTextPersonName2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="0dp"

        android:layout_marginEnd="0dp"
        android:layout_marginBottom="650dp"
        android:layout_toEndOf="@+id/imageView2"
        android:backgroundTint="@color/black"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#D1D1D1"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>